    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="js/bin/materialize.js"></script>
    {ifset bonusScripts}{include bonusScripts}{/ifset}

{/block}
</body>
</html>
